<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hightech.arcade.Global.HomeActivity"
    android:background="@drawable/global_home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/games"
        android:text="ARCADE"
        android:textAlignment="center"
        android:textColor="#F4EEEE"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:fontFamily="@font/games"
        android:text=""
        android:textAlignment="center"
        android:textColor="#F4EEEE"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/global"
        android:layout_width="103dp"
        android:layout_height="67dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textView"
        android:src="@drawable/global"
        android:onClick="showPopup" />

    <Button
        android:id="@+id/futureStart"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_below="@+id/global"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/games"
        android:text="@string/future"
        android:textColor="#F4EEEE"
        android:textSize="23dp" />

    <Button
        android:id="@+id/androidDoodleStart"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_below="@+id/futureStart"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/games"
        android:text="@string/android_doodle"
        android:textColor="#F4EEEE"
        android:textSize="23dp" />

    <Button
        android:id="@+id/jungleEscapeStart"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_below="@+id/global"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@id/futureStart"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/games"
        android:text="@string/jungle_escape"
        android:textColor="#F4EEEE"
        android:textSize="23dp" />

    <Button
        android:id="@+id/jungleRunStart"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginTop="30sp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/jungleEscapeStart"
        android:layout_toEndOf="@id/androidDoodleStart"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/games"
        android:text="@string/jungle_run_2d"
        android:textColor="#F4EEEE"
        android:textSize="23dp" />


</RelativeLayout>