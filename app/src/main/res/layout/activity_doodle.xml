<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hightech.arcade.AndroidDoodle.DoodleActivity"
    android:background="@drawable/doodle_doodletitle">

    <ImageButton
        android:id="@+id/doodlePlay"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/doodleScore"
        android:layout_alignTop="@+id/doodleScore"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="-124dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/doodle_play" />

    <ImageButton
        android:id="@+id/doodleScore"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/doodle_score" />

</RelativeLayout>