<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jungleescape_backgroundmain"
    tools:context="com.hightech.arcade.JungleEscape.JungleEscapeActivity"
    tools:ignore="MissingDefaultResource">

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonScore"
        android:layout_alignTop="@+id/buttonScore"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="-97dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/jungleescape_playnow" />

    <ImageButton
        android:id="@+id/buttonScore"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="103dp"
        android:background="@drawable/jungleescape_highscore" />

</RelativeLayout>